@model Credit_Management_System.ViewModels.Category.CategoryUpdateVM

@{
    ViewData["Title"] = "Edit Category";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Toolbar-->
    <div class="toolbar mb-5" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Edit Category</h1>
                <span class="h-20px border-gray-300 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Category" asp-action="Index" class="text-muted text-hover-primary">Categories</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Edit</li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Index" class="btn btn-lg btn-light fw-bold px-6">
                    <i class="ki-outline ki-arrow-left fs-4 me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div class="container-xxl">
            <div class="card shadow-sm">
                <div class="card-body p-10">
                    <form asp-action="Update" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row mb-6">
                                    <div class="col-lg-6 mb-6">
                                        <label asp-for="Name" class="form-label fw-bold fs-6 text-dark"></label>
                                        <input asp-for="Name" class="form-control form-control-lg form-control-solid" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 mb-6">
                                        <label asp-for="ImageUrl" class="form-label fw-bold fs-6 text-dark"></label>
                                        <input asp-for="ImageUrl" class="form-control form-control-lg form-control-solid" />
                                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <div class="col-lg-6 mb-6">
                                        <label asp-for="Description" class="form-label fw-bold fs-6 text-dark"></label>
                                        <textarea asp-for="Description" rows="3" class="form-control form-control-lg form-control-solid"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 mb-6">
                                        <label asp-for="Image" class="form-label fw-bold fs-6 text-dark">Upload Image</label>
                                        <input asp-for="Image" type="file" class="form-control form-control-lg form-control-solid" />
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <div class="col-lg-6 mb-6">
                                        <label asp-for="ParentCategoryId" class="form-label fw-bold fs-6 text-dark">Parent Category</label>
                                        <select asp-for="ParentCategoryId" asp-items="@(new SelectList(Model.ParentCategories, "Id", "Name"))" class="form-select form-select-solid">
                                            <option value="">-- No Parent --</option>
                                        </select>
                                        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mt-10 text-end">
                                    <button type="submit" class="btn btn-lg btn-primary fw-bold px-6">
                                        <i class="ki-outline ki-save fs-4 me-2"></i> Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--end::Post-->
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
