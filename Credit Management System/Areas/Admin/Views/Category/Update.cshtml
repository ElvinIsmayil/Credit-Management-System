@model Credit_Management_System.ViewModels.Category.CategoryUpdateVM

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Toolbar-->
    <div class="toolbar mb-5" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Edit Category</h1>
                <span class="h-20px border-gray-300 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Category" asp-action="Index" class="text-muted text-hover-primary">Categories</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Edit</li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Index" class="btn btn-lg btn-light fw-bold px-6">
                    <i class="ki-outline ki-arrow-left fs-4 me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div class="container-xxl">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h3 class="card-title fw-bold">Category Details</h3>
                </div>
                <div class="card-body p-10">
                    <form asp-action="Update" method="post" enctype="multipart/form-data" id="category-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-10">
                            <!-- Name -->
                            <div class="col-md-6">
                                <div class="mb-10">
                                    <label asp-for="Name" class="form-label required fw-bold fs-6">Category Name</label>
                                    <input asp-for="Name" class="form-control form-control-solid" placeholder="Enter category name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Parent Category -->
                            <div class="col-md-6">
                                <div class="mb-10">
                                    <label asp-for="ParentCategoryId" class="form-label fw-bold fs-6">Parent Category</label>
                                    <select asp-for="ParentCategoryId" asp-items="@(new SelectList(Model.ParentCategories, "Id", "Name"))" class="form-select form-select-solid">
                                        <option value="">-- No Parent Category --</option>
                                    </select>
                                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <div class="mb-10">
                                    <label asp-for="Description" class="form-label fw-bold fs-6">Description</label>
                                    <textarea asp-for="Description" rows="3" class="form-control form-control-solid" placeholder="Enter category description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Image URL -->
                          

                            <!-- Image Upload -->
                            <div class="col-md-6">
                                <div class="mb-10">
                                    <label asp-for="Image" class="form-label fw-bold fs-6">Upload New Image</label>
                                    <input asp-for="Image" type="file" class="form-control form-control-solid" accept=".jpg,.jpeg,.png,.gif" />
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                    <div class="form-text">Allowed file types: JPG, JPEG, PNG, GIF. Max size: 5MB</div>
                                </div>
                            </div>

                            <!-- Image Preview -->
                            <div class="col-12">
                                <div class="mb-10">
                                    <label class="form-label fw-bold fs-6">Current Image</label>
                                    <div class="image-preview-container">
                                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                        {
                                            <img id="current-image" src="@Model.ImageUrl" class="img-thumbnail" style="max-height: 200px;" />
                                        }
                                        else
                                        {
                                            <div class="text-muted">No image available</div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Form Actions -->
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-5">
                                    <a asp-action="Index" class="btn btn-light btn-lg me-3">Cancel</a>
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <span class="indicator-label">Save Changes</span>
                                        <span class="indicator-progress">
                                            Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--end::Post-->
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function() {
            // Image preview for file upload
            $('#Image').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#current-image').attr('src', e.target.result).show();
                    }
                    reader.readAsDataURL(file);
                }
            });

            // Form submission handling
            $('#category-form').submit(function() {
                // Show loading indicator on submit button
                $(this).find('[type="submit"]').attr('data-kt-indicator', 'on');
            });

            // Initialize select2 if needed
            $('.form-select').select2({
                placeholder: "Select parent category",
                width: '100%'
            });
        });
    </script>

    <style>
        .image-preview-container {
            border: 1px dashed #ddd;
            padding: 10px;
            border-radius: 5px;
            min-height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-label.required:after {
            content: " *";
            color: #f1416c;
        }
    </style>
}