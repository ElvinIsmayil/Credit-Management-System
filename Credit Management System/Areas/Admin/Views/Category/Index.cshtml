@model List<CategoryVM>

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Toolbar-->
    <div class="toolbar py-5 py-lg-7" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container d-flex flex-stack flex-wrap">
            <!--begin::Title-->
            <h1 class="text-dark fw-bold fs-2qx me-5 mb-0">Category List</h1>
            <!--end::Title-->
            <!--begin::Actions-->
            <div class="d-flex align-items-center gap-3 flex-wrap">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary btn-lg" data-bs-toggle="tooltip" data-bs-placement="top" title="Create Category">
                    <i class="fa fa-plus-circle fs-3 me-2"></i> Add Category
                </a>

                <form asp-controller="Category" asp-action="DeleteAll" method="post" class="m-0">
                    <button type="submit" class="btn btn-danger btn-lg" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete All">
                        <i class="fa-regular fa-trash-xmark fs-3 me-2"></i> Delete All
                    </button>
                </form>

                <form asp-controller="Category" asp-action="ArchiveAll" method="post" class="m-0">
                    <button type="submit" class="btn btn-secondary btn-lg" data-bs-toggle="tooltip" data-bs-placement="top" title="Archive All">
                        <i class="fa-regular fa-box-archive fs-3 me-2"></i> Archive All
                    </button>
                </form>
            </div>
            <!--end::Actions-->
        </div>
    </div>
    <!--end::Toolbar-->
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container">
            @if (!string.IsNullOrEmpty(ViewData["SearchTerm"]?.ToString()))
            {
                <div class="alert alert-info d-flex align-items-center mb-6" role="alert">
                    <i class="fa fa-search fs-2hx me-3"></i>
                    <div>
                        Showing results for <strong>"@ViewData["SearchTerm"]"</strong>
                    </div>
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <!--begin::Card-->
                <div class="card shadow-sm">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6 pb-0">
                        <div class="card-title">
                            <!-- You can add search input here if needed -->
                        </div>
                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body pt-0">
                        <div class="table-responsive">
                            <table class="table align-middle table-row-dashed fs-6 gy-5 mb-0">
                                <thead>
                                    <tr class="text-gray-400 text-uppercase fw-semibold fs-7 text-center">
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 10%;">Image</th>
                                        <th style="width: 20%;">Category Name</th>
                                        <th style="width: 25%;">Description</th>
                                        <th style="width: 15%;">Parent Category</th>
                                        <th style="width: 15%;">Operations</th>
                                    </tr>
                                </thead>
                                <tbody class="fw-bold text-gray-600 text-center">
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>
                                                <div class="symbol symbol-circle symbol-70px overflow-hidden me-3">
                                                    <img src="@Model[i].ImageUrl" alt="Category Image" class="object-fit-cover" />
                                                </div>
                                            </td>
                                            <td class="text-start fw-semibold">@Model[i].Name</td>
                                            <td class="text-start">@Model[i].Description</td>
                                            <td class="text-start">
                                                @if (Model[i].ParentCategoryId != null)
                                                {
                                                    @Model[i].ParentCategory?.Name
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Parent</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    <!-- Delete Button (with modal trigger) -->
                                                    <button type="button" class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm delete-btn"
                                                            data-id="@Model[i].Id"
                                                            data-name="@Model[i].Name"
                                                            data-url="@Url.Action("Delete", "Category")"
                                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Delete Category">
                                                        <i class="fa fa-trash-alt fs-5"></i>
                                                    </button>

                                                    <!-- Archive Form -->
                                                    <form asp-action="Archive" asp-controller="Category" asp-route-id="@Model[i].Id" method="post" class="m-0">
                                                        <button type="submit" class="btn btn-icon btn-bg-light btn-active-color-secondary btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Archive Category">
                                                            <i class="fa-regular fa-box-archive fs-5"></i>
                                                        </button>
                                                    </form>

                                                    <!-- Details Link -->
                                                    <a asp-action="Detail" asp-controller="Category" asp-route-id="@Model[i].Id" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="View Details">
                                                        <i class="fa fa-info-circle fs-5"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            }
            else
            {
                <div class="alert alert-danger text-center fs-5" role="alert">
                    No categories found matching your search query.
                </div>
            }
        </div>
    </div>
    <!--end::Post-->
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap 5 tooltips for Metronic
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
