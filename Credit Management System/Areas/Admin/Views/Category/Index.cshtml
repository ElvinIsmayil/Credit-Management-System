@model CategoryIndexVM

@{
    ViewData["Title"] = "Categories List";
}

<div class="content flex flex-col flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="mb-8 text-center text-primary-600 dark:text-primary-400 font-extrabold text-3xl">@ViewData["Title"]</h1>

    <div class="flex justify-end mb-6">
        <a asp-action="Create" class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-semibold px-6 py-3 rounded-full shadow transition">
            <i class="fa-regular fa-plus"></i> Create New Category
        </a>
    </div>

    <table class="min-w-full bg-white dark:bg-gray-800 rounded-lg shadow-lg">
        <thead>
            <tr>
                <th class="text-left px-6 py-4">Name</th>
                <th class="text-left px-6 py-4">Description</th>
                <th class="text-center px-6 py-4">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td class="px-6 py-4">@category.Name</td>
                    <td class="px-6 py-4">@category.Description</td>
                    <td class="text-center px-6 py-4">
                        <a asp-action="Detail" asp-route-id="@category.Id" class="text-blue-600 hover:text-blue-800">View</a> |
                        <a asp-action="Update" asp-route-id="@category.Id" class="text-yellow-600 hover:text-yellow-800">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@category.Id" class="text-red-600 hover:text-red-800">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
