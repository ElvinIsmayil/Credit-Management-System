@model Credit_Management_System.ViewModels.Merchant.MerchantUpdateVM

@{
    ViewData["Title"] = "Update Merchant";
}

<div class="content flex flex-col flex-grow max-w-lg mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="mb-8 text-center text-primary-600 dark:text-primary-400 font-extrabold text-3xl">@ViewData["Title"]</h1>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        <form asp-action="Update" method="post" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="mb-6 text-red-600 font-semibold"></div>

            <div class="mb-6">
                <label asp-for="Name" class="block mb-2 font-semibold text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Name"
                       class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Adress" class="block mb-2 font-semibold text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Adress"
                       class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500" />
                <span asp-validation-for="Adress" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mb-6">
                <label asp-for="PhoneNumber" class="block mb-2 font-semibold text-gray-700 dark:text-gray-300"></label>
                <input asp-for="PhoneNumber"
                       class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500" />
                <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Email" class="block mb-2 font-semibold text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Email"
                       class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-4 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="mb-8">
                <label asp-for="Image" class="block mb-2 font-semibold text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Image" type="file"
                       class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-3 py-2 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500" />
                <span asp-validation-for="Image" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="flex justify-between items-center">
                <a asp-action="Index"
                   class="inline-flex items-center gap-2 px-6 py-3 rounded-full border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition font-semibold">
                    <i class="fa fa-arrow-left"></i> Back to List
                </a>
                <button type="submit"
                        class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-semibold px-6 py-3 rounded-full shadow transition">
                    <i class="fa fa-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
