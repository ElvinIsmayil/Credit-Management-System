@model MerchantDetailVM

@{
    ViewData["Title"] = "Merchant Detail";
}

<div class="content flex flex-col flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="py-6 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white">Merchant Information</h1>
    </div>

    <!-- Card -->
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-xl border border-gray-200 dark:border-gray-700 mt-6 p-8 flex flex-col lg:flex-row gap-8 items-start">
        <!-- Image -->
        <div class="flex-shrink-0">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Merchant Image"
                     class="w-20 h-20 rounded-full object-cover border-2 border-gray-300 dark:border-gray-600 shadow" />
            }
            else
            {
                <div class="w-20 h-20 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700 border-2 border-gray-300 dark:border-gray-600">
                    <span class="text-gray-400 dark:text-gray-500 italic text-sm">No image</span>
                </div>
            }
        </div>

        <!-- Info -->
        <div class="flex-1 w-full max-w-xl text-gray-900 dark:text-gray-100">
            <dl class="grid grid-cols-1 sm:grid-cols-3 gap-x-6 gap-y-4">
                <dt class="font-semibold">Name:</dt>
                <dd class="sm:col-span-2 text-gray-700 dark:text-gray-300">@Model.Name</dd>

                <dt class="font-semibold">Address:</dt>
                <dd class="sm:col-span-2 text-gray-700 dark:text-gray-300">@Model.Adress</dd>

                <dt class="font-semibold">Phone Number:</dt>
                <dd class="sm:col-span-2 text-gray-700 dark:text-gray-300">@Model.PhoneNumber</dd>

                <dt class="font-semibold">Email:</dt>
                <dd class="sm:col-span-2 text-gray-700 dark:text-gray-300">@Model.Email</dd>
            </dl>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex flex-wrap gap-4 justify-start mt-8">
        <a asp-action="Update" asp-route-id="@Model.Id"
           class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white text-lg font-semibold px-8 py-3 rounded-full shadow transition">
            <i class="fa-regular fa-pen-to-square text-xl"></i> Update
        </a>
        <a asp-action="Index"
           class="inline-flex items-center gap-2 bg-gray-200 hover:bg-gray-300 text-gray-800 text-lg font-semibold px-8 py-3 rounded-full shadow transition">
            <i class="fa-regular fa-turn-left text-xl"></i> Back
        </a>
    </div>
</div>
