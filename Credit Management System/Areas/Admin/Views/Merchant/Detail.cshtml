@model Credit_Management_System.ViewModels.Merchant.MerchantDetailVM

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Toolbar-->
    <div class="toolbar mb-5" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Merchant Details</h1>
                <span class="h-20px border-gray-300 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Merchant" asp-action="Index" class="text-muted text-hover-primary">Merchants</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Detail</li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-lg btn-primary fw-bold px-6">
                    <i class="ki-outline ki-pencil fs-4 me-2"></i> Edit Merchant
                </a>
                <a asp-action="Index" class="btn btn-lg btn-light fw-bold px-6">
                    <i class="ki-outline ki-arrow-left fs-4 me-2"></i> Back to List
                </a>
            </div>

        </div>
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div class="container-xxl">
            <div class="card shadow-sm">
                <div class="card-body p-10">
                    <div class="row align-items-center">
                        <!--begin::Avatar-->
                        <div class="col-md-3 text-center mb-10 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="symbol symbol-150px symbol-lg-160px symbol-fixed position-relative mx-auto">
                                    <img src="@Model.ImageUrl" alt="Merchant Image" class="rounded shadow-sm" style="object-fit: cover;" />
                                </div>
                            }
                            else
                            {
                                <div class="symbol symbol-150px symbol-lg-160px symbol-fixed bg-light mx-auto d-flex align-items-center justify-content-center">
                                    <span class="text-muted fw-bold">No Image</span>
                                </div>
                            }
                        </div>
                        <!--end::Avatar-->
                        <!--begin::Info-->
                        <div class="col-md-9">
                            <div class="row mb-5">
                                <div class="col-sm-4 text-muted fw-bold fs-6">Name:</div>
                                <div class="col-sm-8 text-dark fs-6 fw-semibold">@Model.Name</div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-sm-4 text-muted fw-bold fs-6">Address:</div>
                                <div class="col-sm-8 text-dark fs-6">@Model.Adress</div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-sm-4 text-muted fw-bold fs-6">Phone Number:</div>
                                <div class="col-sm-8 text-dark fs-6">@Model.PhoneNumber</div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-sm-4 text-muted fw-bold fs-6">Email Address:</div>
                                <div class="col-sm-8 text-dark fs-6">@Model.Email</div>
                            </div>
                        </div>
                        <!--end::Info-->
                        @if (Model.Branches != null && Model.Branches.Any())
                        {
                            <div class="card mt-10">
                                <div class="card-header">
                                    <h3 class="card-title fw-bold text-gray-800">Branches</h3>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="table-responsive">
                                        <table class="table align-middle table-row-dashed fs-6 gy-4">
                                            <thead>
                                                <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                                                    <th class="min-w-150px">Branch Name</th>
                                                    <th class="min-w-250px">Address</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-gray-700 fw-semibold">
                                                @foreach (var branch in Model.Branches)
                                                {
                                                    <tr>
                                                        <td>@branch.Name</td>
                                                        <td>@branch.Address</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning d-flex align-items-center p-5 mt-10">
                                <i class="ki-outline ki-information-5 fs-2hx text-warning me-4"></i>
                                <div class="d-flex flex-column">
                                    <h4 class="mb-1 text-warning">No Branches Found</h4>
                                    <span>You haven’t added any branches to this merchant yet.</span>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Content-->
</div>
