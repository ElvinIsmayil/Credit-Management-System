@model Credit_Management_System.ViewModels.Merchant.MerchantCreateVM

@{
    ViewData["Title"] = "Create Merchant";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Create New Merchant</h3>
    </div>
    <div class="card-body">
        <form asp-area="Admin" asp-controller="Merchant" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-10">
                <label asp-for="Name" class="form-label fw-bold">Name</label>
                <input asp-for="Name" class="form-control form-control-solid" placeholder="Enter merchant name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-10">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" type="email" class="form-control form-control-solid" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-10">
                <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control form-control-solid" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-10">
                <label asp-for="Adress" class="form-label fw-bold">Address</label>
                <textarea asp-for="Adress" class="form-control form-control-solid" rows="3" placeholder="Enter address"></textarea>
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>

            <div class="mb-10">
                <label asp-for="Image" class="form-label fw-bold">Merchant Image</label>
                <input asp-for="Image" type="file" class="form-control form-control-solid" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">Create Merchant</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
